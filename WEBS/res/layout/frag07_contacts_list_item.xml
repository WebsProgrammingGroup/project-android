<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
	xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
	xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<LinearLayout
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		android:layout_marginTop="4dp"
		android:padding="5dp"
        android:gravity="center_vertical"
		android:background="#555555"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" >
	    
	    <ImageView
		    android:id="@+id/f07_item_photo"
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:layout_marginLeft="3dp"
		    android:clickable="true"
		    android:background="@drawable/ic_app"
		    android:scaleType="centerCrop"/>
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_marginLeft="8dp"
	        android:gravity="center_vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        
		    
	    	<RelativeLayout 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content">
	    	    <TextView 
			        android:id="@+id/f07_item_name"
			        android:text="이름"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="19dp"   
			        android:textStyle="bold"
			        android:textColor="#ffffff"   />
				<com.beardedhen.androidbootstrap.BootstrapButton
			        android:id="@+id/f07_item_id"
			        android:text="학번"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="4dp"
			        android:layout_toLeftOf="@+id/f07_item_gender"
			        android:textColor="#ffffff" 
				    bootstrapbutton:bb_roundedCorners="true"
				    bootstrapbutton:bb_size="xsmall"
				    bootstrapbutton:bb_type="primary" />

				<com.beardedhen.androidbootstrap.BootstrapButton
				    android:id="@+id/f07_item_gender"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="4dp"
				    android:layout_alignParentRight="true"
				    android:text="성"
				    android:textColor="#ffffff"
				    bootstrap:bb_roundedCorners="true"
				    bootstrap:bb_size="xsmall"
				    bootstrap:bb_type="info" />
				
	    	</RelativeLayout>
	    	<LinearLayout 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
		        android:layout_marginTop="3dp"
		        android:gravity="right"
	    	    android:orientation="horizontal">	
	    	    <com.beardedhen.androidbootstrap.BootstrapButton
			        android:id="@+id/f07_item_major"
			        android:text="학과"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#ffffff" 
				    bootstrapbutton:bb_roundedCorners="true"
				    bootstrapbutton:bb_size="xsmall"
				    bootstrapbutton:bb_type="primary" />				
	    	    <com.beardedhen.androidbootstrap.BootstrapButton
			        android:id="@+id/f07_item_tel"
					android:text="000-0000-0000"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="4dp"
			        android:textColor="#ffffff" 
			        android:autoLink="phone"
				    bootstrapbutton:bb_icon_left="fa-phone-square"
				    bootstrapbutton:bb_roundedCorners="true"
				    bootstrapbutton:bb_size="xsmall"
				    bootstrapbutton:bb_type="info" />
	    	    <com.beardedhen.androidbootstrap.BootstrapButton
			        android:id="@+id/f07_item_timetable"
			        android:text="시간표"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="4dp"
			        android:textColor="#ffffff" 
				    bootstrapbutton:bb_icon_left="fa-table"
				    bootstrapbutton:bb_roundedCorners="true"
				    bootstrapbutton:bb_size="xsmall"
				    bootstrapbutton:bb_type="primary" />
    	    </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
